  <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

        <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
    <shape>
        <gradient
                android:startColor="#1138c0f4"
                android:centerColor="#1138c0f4"
                android:centerY="1.0"
                android:endColor="#1138c0f4"
                android:angle="270"
        />
    </shape>
   </item>

  <!-- Define the progress properties like start color, end color etc -->
  <item android:id="@android:id/progress">
    <clip>
        <shape>
            <gradient
                android:startColor="#5538c0f4"
                android:centerColor="#9938c0f4"
                android:centerY="1.0"
                android:endColor="#38c0f4"
                android:angle="270"
            />
        </shape>
    </clip>
</item>
</layer-list>